.header
  .topbar
    .container
      %ul.loginbar.pull-right
        %li
          %a{:href => "page_faq.html"} Help
        %li.topbar-devider
        - if current_user
          %li= link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Login', new_user_session_path

  .navbar.navbar-default.mega-menu{:role => "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.fa.fa-bars
        = link_to image_tag(current_organization.logo.url(:thumb), class: 'organization-logo', id: 'logo-header'), root_path, class: 'navbar-brand' if current_organization.logo?

      - if current_user
        .collapse.navbar-collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "javascript:void(0);"} Products
              %ul.dropdown-menu
                - current_organization.products.each do |product|
                  %li= link_to product.name.titleize, user_product_path(product)
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "javascript:void(0);"} My Account
              %ul.dropdown-menu
                %li= link_to 'Dashboard', root_path
                %li= link_to 'Profile', edit_user_registration_path
                %li= link_to 'Transactions', user_transactions_path
                %li= link_to 'Invoices', user_invoices_path
                %li= link_to 'Billing', edit_user_billing_info_path
            %li.color-aqua
              %a{:href => "faq.html"} FAQ