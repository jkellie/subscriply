#signin
  .bg.clear
    = image_tag 'logo.png', alt: 'Subscriply', class: 'img-responsive', id: 'logo'

    %h3 Forgot your Password?
    %p.text-center
      Oh wait, 
      = link_to 'I just remembered it', new_organizer_session_path
    .content
      = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form' }) do |f|
        = f.error_notification

        .fields
          %strong Email address
          = f.input :email, as: :string, required: true, autofocus: true, label: false, placeholder: 'Your email', input_html: {size: '20', class: 'form-control'}
        .actions
          = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg'

        %center
          Don't have an account?
          = link_to 'Sign up here', new_organization_path
