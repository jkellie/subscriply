.metrics.clearfix
  .metric
    %span.field Total Subscriptions
    %span.data #{number_with_delimiter(dashboard_presenter.total_subscriptions_count)}
  .metric
    %span.field New this period
    %span.data #{number_with_delimiter(dashboard_presenter.new_this_period_count)}
  .metric
    %span.field Canceled this period
    %span.data #{number_with_delimiter(dashboard_presenter.canceled_this_period_count)}
  .metric
    %span.field Sales this period
    %span.data #{number_to_currency(dashboard_presenter.sales_this_period)}