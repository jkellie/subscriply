- if notes.any?
  .comments
    - notes.each do |note|
      .row.comment
        .col-sm-2
          = image_tag note.organizer.avatar.url(:thumb), class: 'avatar img-responsive'
        .col-sm-10
          .message.clearfix
            %header
              %span.name #{note.organizer.name}
              %span.date.pull-right #{time_ago_in_words(note.created_at)} ago
            .note
              %p
                #{note.description}
  / .load-more
  /   %a.btn.btn-default{:href => "#"} Load more...