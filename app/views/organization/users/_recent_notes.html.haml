.filter.clearfix
  %h4.pull-left Recent Notes

- if notes.any?
  .comments{style: 'margin-top: 10px'}
    - notes.each do |note|
      .row.comment{style: 'padding-bottom: 30px'}
        .col-sm-2
          = image_tag note.organizer.avatar.url(:thumb), class: 'avatar img-responsive'
        .col-sm-10
          .message.clearfix
            %header
              %span.name #{note.organizer.name}
              %span.date.pull-right #{time_ago_in_words(note.created_at)} ago
            .note
              %p
                #{note.description}
