= content_for(:menubar) do
  Edit Subscription: #{@subscription_presenter.user_name}

= content_for(:menubar_right) do
  .pull-right
    .row.status-labels
      = @subscription_presenter.status_label

.col-sm-12
  .panel.panel-default{:style => "margin-top: 20px"}
    .panel-heading
      %span Plan Details:
    .panel-body
      = simple_form_for @subscription_presenter.subscription, url: change_plan_organization_subscription_path(@subscription_presenter.subscription), method: :put do |f|
        #plan-details.col-sm-6
          %dl.dl-horizontal
            %dt Product:
            %dd #{@subscription_presenter.product_name}
            %br
            %dt Plan:
            %dd
              = f.select :plan_id, @plans.map {|p| [p.name, p.id, {'data-plan-type' => p.plan_type }]}, {}, include_blank: false, class: 'form-control'
            %br
            %dt.location-label Location:
            %dd
              = f.select :location_id, @locations.map {|l| ["#{l.name} - #{l.street_address} #{l.city} #{l.state} #{l.zip}",l.id] }, {}, include_blank: false, class: 'form-control'

            %br
            %dt{:style => "margin-top: 10px"} Apply Changes:

            %dd
              = f.collection_radio_buttons(:apply_changes, [['renewal', 'On Next Renewal (default)'], ['now', 'Immediately']], :first, :last, item_wrapper_tag: :div, item_wrapper_class: :radio, checked: 'renewal') { |b| content_tag(:label) { raw(b.radio_button + b.label) } }
              %i - Applying changes immediately will result in a prorated credit or charge applied to the account based on the price difference of the updated subscription.
        #plan-summary.col-sm-6
          %dl.dl-horizontal
            %dt Account Name:
            %dd #{@subscription_presenter.user_name}
            %dt Subscription Cost:
            %dd #{@subscription_presenter.plan_amount}
          %br
          %br
          %center
            %div{:style => "margin-top: 20px"}
              = link_to 'Cancel', organization_subscription_path(@subscription_presenter.subscription), class: 'btn btn-default', type: 'button', style: 'margin-right: 5px'
              %button.btn.btn-primary{:style => "margin-left: 5px", :type => "submit"} Update Subscription

