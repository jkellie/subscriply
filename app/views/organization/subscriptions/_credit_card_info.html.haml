.step.step3.animated
  .row
    
    .col-md-6
      .row
        .col-md-4
          %label{for: 'first_name'} * First Name
          = text_field_tag nil, '', required: true, id: 'first_name', class: 'form-control', data: {recurly: 'first_name'}
        .col-md-5
          %label{for: 'last_name'} * Last Name
          = text_field_tag nil, '', required: true, id: 'last_name', class: 'form-control', data: {recurly: 'last_name'}

      .row{:style => "margin-top: 15px"}
        .col-md-9
          %label{for: 'number'} * Card Number
          = text_field_tag nil, '', required: true, id: 'number', class: 'form-control', placeholder: '•••• •••• •••• ••••', data: {recurly: 'number'}, autocomplete: 'off'
      
      .row{:style => "margin-top: 15px"}
        .col-md-3
          %label * Exp. Month
          = select_tag nil, options_for_select(months_for_select.collect {|p| [p[0], p[1]] }), required: true, id: 'month', class: 'form-control', data: {recurly: 'month'}

        .col-md-3
          %label * Exp. Year
          = select_tag nil, options_for_select(years_for_select.collect {|p| [p, p] }), required: true, id: 'year', class: 'form-control', data: {recurly: 'year'}

        .col-md-3
          %label{for: 'cvv'} * CVV
          = text_field_tag nil, '', required: true, id: 'cvv', class: 'form-control', data: {recurly: 'cvv'}
          
    .col-md-6

      - if f.object.show_shipping_info?
        .row
          .col-md-12
            .checkbox{:style => "margin-top: 15px"}
              %input{id: 'same_as_shipping', checked: false, type: "checkbox"}
              %label{for: 'same_as_shipping'} Same as shipping

      - if f.object.show_billing_info?
            
        .row{:style => "margin-top: 15px"}
          .col-md-12
            %label{for: 'address1'} * Billing Address
            = text_field_tag nil, '', required: true, id: 'address1', placeholder: 'Street Address', class: 'form-control', data: {recurly: 'address1'}

        .row{:style => "margin-top: 15px"}
          .col-md-12
            = text_field_tag nil, '', id: 'address2', placeholder: 'Apt / Suite No', class: 'form-control', data: {recurly: 'address2'}

        .row{:style => "margin-top: 15px"}
          .col-md-6
            = text_field_tag nil, '', required: true, placeholder: 'City', id: 'city', class: 'form-control', data: {recurly: 'city'}

          .col-md-3
            = select_tag nil, options_for_select(us_states), required: true, placeholder: 'State Code', id: 'state', class: 'form-control', data: {recurly: 'state'}
          .col-md-3
            = text_field_tag nil, '', required: true, placeholder: 'Zip Code', id: 'postal_code', class: 'form-control', data: {recurly: 'postal_code'}

  .form-group.form-actions.text-right
    %a.btn-default.btn.back{"data-step" => "2", :href => "#"}
      = icon 'angle-double-left'
      %b Back
    
    %button.btn.btn-primary.next{"data-step" => "4", :type => "submit"}
      %b Next Step
      = icon 'angle-double-right'