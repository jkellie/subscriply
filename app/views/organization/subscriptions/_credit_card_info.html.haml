.step.animated
  .row
    .col-sm-6
      .row
        .col-md-9
          = f.input :name_on_card, input_html: { class: 'form-control' }

      .row{:style => "margin-top: 15px"}
        .col-md-9
          = f.input :card_number, input_html: { class: 'form-control' }
      
      .row{:style => "margin-top: 15px"}
        .col-md-3
          = f.input :expiration_month, label: 'Expiration', as: :select, collection: months_for_select, input_html: { class: 'form-control' }
          
        .col-md-3{:style => "margin-top: 25px"}
          = f.input :expiration_year, label: false, as: :select, collection: years_for_select, input_html: { class: 'form-control' }
          
        .col-md-3
          = f.input :cvv, label: 'CVV', input_html: { class: 'form-control' }
          
    .col-sm-6
      .checkbox{:style => "margin-top: 15px"}
        %label
          %input{:checked => "", :type => "checkbox"}
            Same as shipping
      %div{:style => "margin-top: 15px"}
        = f.input :billing_street_address, label: 'Billing Address', input_html: { class: 'form-control' }

      %div{:style => "margin-top: 15px"}
        = f.input :billing_street_address_2, label: false, input_html: { class: 'form-control' }
      .row{:style => "margin-top: 15px"}
        .col-sm-6
          = f.input :billing_city, placeholder: 'City', label: false, input_html: { class: 'form-control' }
        .col-sm-3
          = f.input :billing_state_code, placeholder: 'State', label: false, input_html: { class: 'form-control' }
        .col-sm-3
          = f.input :billing_zip, placeholder: 'Zip Code', label: false, input_html: { class: 'form-control' }

  .form-group.form-actions
    %a.button{"data-step" => "2", :href => "#"}
      %span
        %i.fa.fa-angle-double-left
        Back
    
    %button.button{"data-step" => "4", :type => "submit"}
      %span
        Next Step
        %i.fa.fa-angle-double-right