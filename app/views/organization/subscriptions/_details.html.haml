.panel.panel-default{:style => "margin-top: 20px"}
  .panel-heading
    %span Details:
    = link_to canceling_organization_subscription_path(subscription_presenter.subscription), class: 'pull-right', style: 'margin-left: 10px' do
      = icon 'trash-o'
    = link_to edit_organization_subscription_path(subscription_presenter.subscription), class: 'pull-right' do
      = icon 'pencil'
  .panel-body
    .col-sm-6
      %dl.dl-horizontal
        %dt Status:
        %dd #{subscription_presenter.subscription_state}
        %dt Start Date:
        %dd #{subscription_presenter.start_date}
        %dt Current Period:
        %dd= ' - '
        %dt Next Invoice:
        %dd #{subscription_presenter.next_bill_on}
        - if subscription_presenter.renewal_changable?
          %dt
          %dd
            %a.btn.btn-default.btn-xs{"data-target" => "#edit-renewal", "data-toggle" => "modal", :href => "#", style: 'margin-top: 10px'} Change renewal date
    .col-sm-6
      %dl.dl-horizontal
        %dt Subscription:
        %dd #{subscription_presenter.plan_name}
        %dt Type:
        %dd #{subscription_presenter.plan_type}
        %dt Next Ship / Available:
        %dd #{subscription_presenter.next_ship_on}
        %dt Amount:
        %dd= raw subscription_presenter.plan_amount

      = subscription_presenter.changing_status if subscription_presenter.changing?