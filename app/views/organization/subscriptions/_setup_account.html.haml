.step.step1.animated.active
  .row
    
    .col-md-6
      .row
        .col-md-6
          = f.input :sales_rep_id, as: :select, collection: f.object.sales_reps, input_html: { class: 'form-control'}
      .row{:style => "margin-top: 45px"}
        .col-md-12
          = f.input :member_number, input_html: { class: 'form-control', style: 'width: 46%'}, required: true

      .row{:style => "margin-top: 15px"}
        .col-md-6
          = f.input :first_name, input_html: { class: 'form-control' }, required: true
        .col-md-6
          = f.input :last_name, input_html: { class: 'form-control' }, required: true
    
    .col-md-6
      .row
        .col-md-6
          = f.input :phone_number, input_html: { class: 'form-control', type: 'phone' }, required: true
        .col-md-6
          = f.input :email, input_html: { class: 'form-control', type: 'email' }, required: true

      .row{:style => "margin-top: 15px"}
        .col-md-12
          = f.input :street_address, label: 'Shipping Address', placeholder: 'Street Address', input_html: { class: 'form-control' }, required: true

      .row{:style => "margin-top: 15px"}
        .col-md-12
          = f.input :street_address_2, label: false, placeholder: 'Apt / Suite', input_html: { class: 'form-control' }

      .row{:style => "margin-top: 15px"}
        .col-md-6
          = f.input :city, placeholder: 'City', required: true, label: false, input_html: { class: 'form-control' }
        .col-md-3
          = f.input :state_code, placeholder: 'State', required: true, label: false, input_html: { class: 'form-control' }
        .col-md-3
          = f.input :zip, placeholder: 'Zip Code', required: true, label: false, input_html: { class: 'form-control' }

  .form-group.form-actions.text-right
    %button.btn.btn-primary.next{"data-step" => "2", :type => "submit"}
      %b Next Step
      = icon 'angle-double-right'