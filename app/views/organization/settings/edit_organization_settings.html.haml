= content_for(:body_id) do
  account

= render 'sidebar', step: 'organization'
= render 'add_location'
= render 'edit_location'

#panel.notifications
  %h3
    Organization settings
  .settings
    = simple_form_for(current_organization, url: update_organization_settings_organization_settings_path, method: :put) do |f|
      
      .row
        .col-sm-6
          .form-group
            = f.input :name, as: :string, label: 'Organization Name', placeholder: 'Organization Name', input_html: {class: 'form-control'} 
        .col-sm-6
          %p{:style => "margin-top: 20px"} Please be sure to keep Recurly™ updated as well.
      
      .row{style: 'margin-top: 20px'}
        .col-sm-6
          .form-group
            %span
              %strong * Upload Logo
            %br
            #organization_logo_progress_bar
            = image_tag current_organization.logo.url(:thumb), style: 'padding-top: 5px; padding-bottom: 5px; max-width: 100%', id: 'organization-logo'

            %div{:style => "margin-top: 5px"}
              = f.input :logo, label: false, as: :file
        .col-sm-6
          %p{:style => "margin-top: 20px"} Logo max size is 80px tall. A .png file works best.

      #locations
        = render 'locations', locations: current_organization.locations

      .row
        .col-sm-6
          .form-group
            = f.input :customer_service_email, as: :string, label: 'Customer Service Email', placeholder: 'service@myorganization.com', input_html: {class: 'form-control'} 
        .col-sm-6
          %p{:style => "margin-top: 20px"} We recommend you use an email that is checked daily. Please be sure to keep Recurly™ updated as well.

      .row
        .col-sm-6
          .form-group
            = f.input :customer_service_phone, as: :string, label: 'Customer Service Phone', input_html: {class: 'form-control'} 
        .col-sm-6
          %p{:style => "margin-top: 20px"} This number will be displayed on the site. Please be sure to keep Recurly™ updated as well.
      
      .row{:style => "padding: 15px"}
        .form-group
          %label.control-label Refund Policy *
          = f.input :refund_policy, as: :text, label: false, input_html: {rows: 10, class: 'form-control ckeditor'}
        .form-group.action
          %input.btn.btn-success{:type => "submit", :value => "Save changes"}

:javascript
  $(function() {
    OrganizationSettings.init()
  });
