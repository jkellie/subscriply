#invite_organizer_modal.modal.fade{'aria-hidden' => 'true', role: 'dialog', tabindex: '-1'}
  .modal-dialog
    .modal-content
      = simple_form_for(Organizer.new, url: invite_organization_organizers_path) do |f|
        .modal-header
          %button.close{'aria-hidden' => 'true', 'data-dismiss' => 'modal', type: 'button'} Ã—
          %h4#myModalLabel.modal-title
            Invite an admin
        .modal-body
          .form-group
            .checkbox
              %label
                = f.input :super_admin, as: :boolean, label: false
                %strong Make Super Admin
          %p
            %i * Super Admin status grants access to organization settings and financial reporting
          %br
            .row
              .col-md-6
                .form-group
                  = f.input :first_name, required: true, as: :string, label: 'First Name', input_html: {class: 'form-control'}
              .col-md-6
                .form-group
                  = f.input :last_name, required: true, as: :string, label: 'Last Name', input_html: {class: 'form-control'}
            .form-group
              = f.input :email, required: true, label: 'Email', input_html: {class: 'form-control'}
        .modal-footer
          %button.btn.btn-default{'data-dismiss' => 'modal', type: 'button'} Cancel
          %button.btn.btn-success{type: 'submit'} Send invitation