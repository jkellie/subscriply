.row
  .session-form.col-md-5.col-md-offset-3
    %h3 Register a New Account
    %p.text-center
      Already Signed Up?
      = link_to 'Click here', new_user_session_path
      to login to your account.

    %hr

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f|
      = f.error_notification

      .col-md-6
        .form-group
          = f.input :first_name, as: :string, required: true, autofocus: true, input_html: {class: 'form-control'}
      .col-md-6
        .form-group
          = f.input :last_name, as: :string, required: true, input_html: {class: 'form-control'}
      .col-md-12
        .form-group
          = f.input :email, as: :string, required: true, input_html: {class: 'form-control'}
      .row
        .col-md-12
          .col-md-6
            .form-group
              = f.input :password, required: true, input_html: {class: 'form-control'}
          .col-md-6
            .from-group
              = f.input :password_confirmation, label: 'Confirm Password', required: true, input_html: {class: 'form-control'}
      %hr
      
      .row
        .col-md-12
          .col-md-7.form-inline
            .tos
              - label = "I agree to the #{link_to 'Terms of Service', '#', target: '_blank'}".html_safe
              = f.input :terms_of_service, as: :boolean, label: label, inline_label: true


          .col-md-5
            .form-group.pull-right
              = f.button :submit, 'Register', class: 'btn btn-primary'
