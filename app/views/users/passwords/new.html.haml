.row
  .session-form.col-md-5.col-md-offset-3
    %h3 Forgot your Password?
    %p.text-center
      Oh wait, 
      = link_to 'I just remembered it', new_user_session_path
    %hr

    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = f.error_notification

      .form-group
        .input-group
          %span.input-group-addon= icon 'user'
          = f.input :email, as: :string, label: false, :required => true, :autofocus => true, input_html: {class: 'form-control', placeholder: 'Email'}
      .form-group
        = f.button :submit, "Send me reset password instructions", class: 'btn btn-primary'
