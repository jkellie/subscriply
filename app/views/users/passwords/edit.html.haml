.row
  .session-form.col-md-5.col-md-offset-3
    %h3 Change your Password
    %hr
    
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = f.error_notification
      = f.input :reset_password_token, :as => :hidden
      = f.full_error :reset_password_token

      .form-group
        .input-group
          %span.input-group-addon= icon 'lock'
          = f.input :password, required: true, label: false, autofocus: true, input_html: {class: 'form-control', placeholder: 'New Password'}
      .form-group
        .input-group
          %span.input-group-addon= icon 'lock'
          = f.input :password_confirmation, label: false, :required => true, input_html: {class: 'form-control', placeholder: 'Confirm New Password'}
      .form-actions
        = f.button :submit, "Change my password", class: 'btn btn-primary'
    

